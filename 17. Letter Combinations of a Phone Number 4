class Solution(object):
    def __init__(self):
        self.dic = {'2':'abc','3':'def','4':'ghi','5':'jkl','6':'mno','7':'pqrs','8':'tuv','9':'wxyz'}
    def letterCombinations(self, digits):
        """
        :type digits: str
        :rtype: List[str]
        """
        if len(digits) == 0:
            return []
        result = []
        self.helper(result, '', digits)
        return result
    
    def helper(self, result, temp, digits):
        if len(digits) == 0:
            result.append(temp)
            return
        for str_ in self.dic[digits[0]]:
            self.helper(result, temp + str_, digits[1:])
