class Solution(object):
    def numDecodings(self, s):
        """
        :type s: str
        :rtype: int
        """
        if s == None or len(s) == 0:
            return 0
        n = len(s)
        dp = [0]*(n+1)
        dp[0] = 1        
        for i in range(1,n+1):
            if s[i-1] != '0':
                # if s[i-1] == 0, dp[i] should be 0, case like '10'
                dp[i] = dp[i-1]
            if i != 1 and s[i-2:i] < '27' and s[i-2:i] > '09':
                dp[i] += dp[i-2]
        return dp[n]
